<!DOCTYPE html>

<html>
	<head>
		<title>Simple CMS: <%=@page_title || "Admin Area" %></title>
		<%= stylesheet_link_tag('application', :media => 'all') %>
	</head>
	<body>

		<div id="header">
			<h1>Simple CMS Header</h1>
		</div>
		
		<div id="main">
			<% if !flash[:notice].blank? %>
			  <div class ="notice">
			    <%= flash[:notice] %>
			  </div>
			<% end %>

			<div id="content">
				<%= yield %>
			</div>

		</div>

		<div id="footer">
			<p id="copywrite">&copy; scottandvega.com
		</div>
	</body>
</html>